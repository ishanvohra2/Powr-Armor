<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/beige_light"
    android:padding="20dp"
    android:layout_margin="10dp"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/armorPartImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/beige"
            android:contentDescription="@null"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/typeImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/ic_head"
            android:layout_margin="5dp"
            app:layout_constraintBottom_toBottomOf="@id/armorPartImage"
            app:layout_constraintEnd_toEndOf="@id/armorPartImage"/>

        <TextView
            android:id="@+id/rankTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/caption"
            android:textColor="@color/white"
            tools:text="#20"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/title"
            android:textColor="@color/white"
            tools:text="Delta Glove"
            android:textAlignment="center"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/armorPartImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/baseDefenceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/caption"
            android:textColor="@color/white"
            tools:text="Base Defence: High"
            android:textAlignment="center"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@id/nameTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/decorationSlotsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/caption"
            android:textColor="@color/white"
            tools:text="Decoration Slots: 24"
            android:textAlignment="center"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@id/baseDefenceTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>